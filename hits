</cert>
<key>
$(cat /etc/openvpn/ca-key.pem)
EOF6

cat > /etc/openvpn/client2.ovpn << EOF7
client
dev tun
proto tcp
remote $SERVER_IP:443@ws.stream.qqmusic.qq.com
